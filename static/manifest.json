{
  "name": "Board Extender Browser",
  "description": "This extension will be help you to see better card of the board in full screen.",
  "version": "1.0.0",
  "content_scripts": [
    {
      "matches": ["*://*.trello.com/*"],
      "run_at": "document_end",
      "js": ["trello.js"]
    },
    {
      "matches": ["*://*.gitlab.com/*"],
      "run_at": "document_end",
      "js": ["gitlab.js"]
    },
    {
      "matches": ["*://*.github.com/*"],
      "run_at": "document_end",
      "js": ["github.js"]
    }
  ],
  "browser_action": {
    "default_title": "Board Extender",
    "default_icon": "logo-board-extender.png"
  },
  "manifest_version": 2,
  "permissions": ["activeTab"]
}
